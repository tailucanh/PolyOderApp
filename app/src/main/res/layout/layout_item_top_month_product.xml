<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_7dp"
        android:layout_marginVertical="@dimen/dimen_8dp"
        app:cardElevation="@dimen/dimen_4dp"
        app:cardCornerRadius="@dimen/dimen_15dp"
        android:visibility="visible"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/custom_item_top_month_product"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cavProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/dimen_15dp"
                android:layout_marginVertical="@dimen/dimen_8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintVertical_bias="0.5">
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="@dimen/dimen_100dp"
                    android:layout_height="@dimen/dimen_100dp"
                    android:src="@drawable/ic_product"

                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvNameTop"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_32dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Cappuccino"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_18dp"
                android:maxLines="1"
                android:maxLength="17"
                android:ellipsize="end"
                android:maxEms="9"
                android:paddingStart="@dimen/dimen_13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/cavProduct"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/tvDescTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="kết hợp chocolate"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_13dp"
                android:maxLines="1"
                android:maxLength="35"
                android:ellipsize="end"
                android:maxEms="10"
                android:paddingStart="@dimen/dimen_13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@+id/cavProduct"
                app:layout_constraintTop_toBottomOf="@+id/tvNameTop"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvPriceTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="45.000đ"
                android:textColor="@color/brown_300"
                android:textSize="@dimen/dimen_19dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toEndOf="@+id/cavProduct"
                app:layout_constraintTop_toBottomOf="@id/tvDescTop" />

            <ImageView
                android:id="@+id/ic_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:src="@drawable/ic_heart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tvNameTop"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>