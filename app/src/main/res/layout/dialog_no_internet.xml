<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="10dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:background="@drawable/custom_bg_dialog_no_internet"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_internet_2"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đang ngoại tuyến.Hãy kết nối internet để tiếp tục sử dụng ứng dụng."
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/dimen_5dp"
            android:textColor="@color/brown_300"
            android:textSize="@dimen/dimen_15dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="@dimen/dimen_20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginVertical="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                app:cardCornerRadius="@dimen/dimen_30dp"
                >
                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_45dp"
                    android:text="Hủy"
                    android:paddingHorizontal="@dimen/dimen_40dp"
                    android:background="@drawable/custom_button_dialog_evaluate"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/dimen_17dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_marginVertical="@dimen/dimen_5dp"
                app:cardElevation="@dimen/dimen_3dp"
                app:cardCornerRadius="@dimen/dimen_30dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                >
                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_45dp"
                    android:text="Bật WIFI "
                    android:paddingHorizontal="@dimen/dimen_40dp"
                    android:background="@color/brown_70"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/dimen_16dp"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>


