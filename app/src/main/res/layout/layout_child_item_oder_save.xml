<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cavImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/dimen_3dp"
            app:cardCornerRadius="@dimen/dimen_10dp"
            android:layout_margin="@dimen/dimen_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="@dimen/dimen_70dp"
                    android:src="@drawable/ic_product"
                    />
                <TextView
                    android:id="@+id/tvNameProduct"
                    android:layout_width="@dimen/dimen_70dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/dimen_3dp"
                    android:paddingBottom="@dimen/dimen_3dp"
                    android:textColor="@color/grey_200"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textSize="@dimen/dimen_13dp"
                    android:maxLines="1"
                    android:maxLength="35"
                    android:ellipsize="end"
                    android:maxEms="10"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvCount"
            android:layout_width="@dimen/dimen_28dp"
            android:layout_height="@dimen/dimen_28dp"
            android:elevation="@dimen/dimen_3dp"
            android:layout_alignEnd="@+id/cavImg"
            android:background="@drawable/custom_tv_count"
            android:text="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:tint="@color/grey_200" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>